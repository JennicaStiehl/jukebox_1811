<% if @song.errors %>
<ul id="errors">
  <% @song.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :length %>
  <%= f.number_field :length %>

  <%= f.label :play_count %>
  <%= f.number_field :play_count %>

  <%= f.submit %>
<% end %>
